<%- include("../../partials/head") %>
    <%- include("../../partials/navbar") %>

        <div class="max-w-3xl mx-auto mt-24 px-6">

            <h1 class="text-3xl font-bold text-pink-600 mb-6">
                ✏️ Sahiplendirme Düzenle
            </h1>

            <form action="/admin/pets/edit/<%= pet.id %>" method="POST"
                class="bg-white p-6 rounded-2xl shadow space-y-4">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <input type="text" name="name" value="<%= pet.name %>" class="w-full px-4 py-2 border rounded-xl"
                    required>

                <select name="type" class="w-full px-4 py-2 border rounded-xl">
                    <option value="dog" <%=pet.type==="dog" ? "selected" : "" %>>Köpek</option>
                    <option value="cat" <%=pet.type==="cat" ? "selected" : "" %>>Kedi</option>
                </select>

                <input type="number" name="age" value="<%= pet.age %>" class="w-full px-4 py-2 border rounded-xl"
                    required>

                <input type="text" name="city" value="<%= pet.city %>" class="w-full px-4 py-2 border rounded-xl"
                    required>

                <input type="text" name="image" value="<%= pet.image %>" class="w-full px-4 py-2 border rounded-xl">

                <textarea name="description"
                    class="w-full px-4 py-2 border rounded-xl"><%= pet.description %></textarea>

                <button class="px-6 py-3 bg-pink-500 text-white rounded-xl hover:bg-pink-600">
                    Güncelle
                </button>

            </form>

        </div>

        <%- include("../../partials/footer") %>