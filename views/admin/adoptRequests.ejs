<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <div class="p-6">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-2xl font-bold text-gray-800">Sahiplenme Talepleri</h1>
            </div>

            <div class="bg-white rounded-xl shadow-sm overflow-hidden border border-gray-100">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-gray-50 border-b border-gray-100 text-xs text-gray-500 uppercase">
                            <th class="p-4 font-semibold">Tarih</th>
                            <th class="p-4 font-semibold">Hayvan</th>
                            <th class="p-4 font-semibold">Başvuran</th>
                            <th class="p-4 font-semibold">İletişim</th>
                            <th class="p-4 font-semibold">Neden?</th>
                            <th class="p-4 font-semibold">Diğer Hayv.</th>
                            <th class="p-4 font-semibold">Durum</th>
                            <th class="p-4 font-semibold text-right">İşlem</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">
                        <% requests.forEach(req=> { %>
                            <tr class="hover:bg-gray-50 transition">
                                <td class="p-4 text-sm text-gray-500">
                                    <%= new Date(req.created_at).toLocaleDateString("tr-TR") %>
                                </td>
                                <td class="p-4">
                                    <span class="font-medium text-pink-600">
                                        <%= req.pet_name %>
                                    </span>
                                </td>
                                <td class="p-4">
                                    <div class="font-semibold text-gray-800">
                                        <%= req.name %>
                                    </div>
                                    <div class="text-xs text-gray-500">
                                        <%= req.user_email %>
                                    </div>
                                </td>
                                <td class="p-4 text-sm">
                                    <div>
                                        <%= req.phone %>
                                    </div>
                                    <div class="text-gray-400">
                                        <%= req.email %>
                                    </div>
                                </td>
                                <td class="p-4 text-sm text-gray-600 max-w-xs truncate" title="<%= req.reason %>">
                                    <%= req.reason %>
                                </td>
                                <td class="p-4 text-sm">
                                    <% if(req.has_other_pets==='yes' ) { %>
                                        <span class="text-green-600 font-semibold">Evet</span>
                                        <% } else { %>
                                            <span class="text-gray-400">Hayır</span>
                                            <% } %>
                                </td>
                                <td class="p-4">
                                    <% if (req.status==='pending' ) { %>
                                        <span
                                            class="px-2 py-1 text-xs font-bold rounded-full bg-yellow-100 text-yellow-700">Bekliyor</span>
                                        <% } else if (req.status==='approved' ) { %>
                                            <span
                                                class="px-2 py-1 text-xs font-bold rounded-full bg-green-100 text-green-700">Onaylandı</span>
                                            <% } else { %>
                                                <span
                                                    class="px-2 py-1 text-xs font-bold rounded-full bg-red-100 text-red-700">Reddedildi</span>
                                                <% } %>
                                </td>
                                <td class="p-4 text-right space-x-2">
                                    <% if (req.status==='pending' ) { %>
                                        <form action="/admin/adopt/requests" method="POST" class="inline-block">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <input type="hidden" name="id" value="<%= req.id %>">
                                            <input type="hidden" name="status" value="approved">
                                            <button
                                                class="text-green-500 hover:text-green-700 font-semibold text-sm transition"
                                                title="Onayla">
                                                <i class="fa-solid fa-check"></i>
                                            </button>
                                        </form>
                                        <form action="/admin/adopt/requests" method="POST" class="inline-block">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <input type="hidden" name="id" value="<%= req.id %>">
                                            <input type="hidden" name="status" value="rejected">
                                            <button
                                                class="text-red-400 hover:text-red-600 font-semibold text-sm transition"
                                                title="Reddet">
                                                <i class="fa-solid fa-xmark"></i>
                                            </button>
                                        </form>
                                        <% } else { %>
                                            <span class="text-gray-300">-</span>
                                            <% } %>
                                </td>
                            </tr>
                            <% }) %>
                                <% if (requests.length===0) { %>
                                    <tr>
                                        <td colspan="8" class="p-8 text-center text-gray-400">
                                            Henüz talep yok.
                                        </td>
                                    </tr>
                                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <%- include('../partials/footer') %>