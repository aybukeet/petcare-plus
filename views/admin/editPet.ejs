<%- include("../partials/head") %>
    <%- include("../partials/navbar") %>

        <div class="min-h-screen bg-[#fafafa] relative flex items-center justify-center py-32 px-6 overflow-hidden">
            <!-- BACKGROUND GLOWS -->
            <div class="absolute inset-0 z-0 pointer-events-none">
                <div
                    class="absolute top-[-10%] right-[-10%] w-[50%] h-[70%] bg-indigo-50 rounded-full blur-[150px] opacity-40">
                </div>
                <div
                    class="absolute bottom-[-10%] left-[-10%] w-[50%] h-[70%] bg-violet-50 rounded-full blur-[150px] opacity-40">
                </div>
            </div>

            <div class="max-w-4xl w-full relative z-10">
                <div class="glass-card rounded-[3.5rem] p-12 md:p-20 shadow-2xl border border-white/50 relative">

                    <div class="mb-12 text-center">
                        <span
                            class="inline-block px-4 py-1.5 bg-indigo-50 text-indigo-600 text-[10px] font-black uppercase tracking-[0.3em] rounded-full mb-6">
                            Kayıt Düzenleme
                        </span>
                        <h1 class="text-4xl md:text-6xl font-black text-gray-900 tracking-tighter leading-none mb-4">
                            Dostumuzu <span class="text-indigo-600">Güncelle</span>
                        </h1>
                        <p class="text-gray-400 font-medium">
                            <%= pet.name %> isimli can dostumuzun bilgilerini güncelliyorsunuz.
                        </p>
                    </div>

                    <form action="/admin/pets/edit/<%= pet.id %>" method="POST"
                        class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                        <div class="space-y-6">
                            <div class="relative group">
                                <label
                                    class="block text-[10px] font-black uppercase tracking-widest text-gray-400 mb-2 ml-1">Hayvanın
                                    Adı</label>
                                <input type="text" name="name" value="<%= pet.name %>" required
                                    class="w-full bg-white/50 border-2 border-transparent px-6 py-4 rounded-2xl text-lg font-bold text-gray-800 focus:border-indigo-300 focus:bg-white transition shadow-sm">
                            </div>

                            <div class="relative group">
                                <label
                                    class="block text-[10px] font-black uppercase tracking-widest text-gray-400 mb-2 ml-1">Tür</label>
                                <select name="type" required
                                    class="w-full bg-white/50 border-2 border-transparent px-6 py-4 rounded-2xl text-lg font-bold text-gray-800 focus:border-indigo-300 focus:bg-white transition shadow-sm appearance-none">
                                    <option value="dog" <%=pet.type==='dog' ? 'selected' : '' %>>Köpek</option>
                                    <option value="cat" <%=pet.type==='cat' ? 'selected' : '' %>>Kedi</option>
                                    <option value="other" <%=pet.type==='other' ? 'selected' : '' %>>Diğer</option>
                                </select>
                            </div>

                            <div class="relative group">
                                <label
                                    class="block text-[10px] font-black uppercase tracking-widest text-gray-400 mb-2 ml-1">Yaş</label>
                                <input type="text" name="age" value="<%= pet.age %>" required
                                    class="w-full bg-white/50 border-2 border-transparent px-6 py-4 rounded-2xl text-lg font-bold text-gray-800 focus:border-indigo-300 focus:bg-white transition shadow-sm">
                            </div>
                        </div>

                        <div class="space-y-6">
                            <div class="relative group">
                                <label
                                    class="block text-[10px] font-black uppercase tracking-widest text-gray-400 mb-2 ml-1">Şehir</label>
                                <input type="text" name="city" value="<%= pet.city %>" required
                                    class="w-full bg-white/50 border-2 border-transparent px-6 py-4 rounded-2xl text-lg font-bold text-gray-800 focus:border-indigo-300 focus:bg-white transition shadow-sm">
                            </div>

                            <div class="relative group">
                                <label
                                    class="block text-[10px] font-black uppercase tracking-widest text-gray-400 mb-2 ml-1">Görsel
                                    URL</label>
                                <input type="text" name="image" value="<%= pet.image %>" required
                                    class="w-full bg-white/50 border-2 border-transparent px-6 py-4 rounded-2xl text-lg font-bold text-gray-800 focus:border-indigo-300 focus:bg-white transition shadow-sm">
                            </div>

                            <div class="relative group">
                                <label
                                    class="block text-[10px] font-black uppercase tracking-widest text-gray-400 mb-2 ml-1">Açıklama</label>
                                <textarea name="description" rows="1"
                                    class="w-full bg-white/50 border-2 border-transparent px-6 py-4 rounded-2xl text-lg font-bold text-gray-800 focus:border-indigo-300 focus:bg-white transition shadow-sm"><%= pet.description %></textarea>
                            </div>
                        </div>

                        <div class="md:col-span-2 mt-10">
                            <button
                                class="w-full bg-gray-900 text-white py-6 rounded-[2rem] font-black text-xl shadow-2xl hover:bg-indigo-600 transition-all duration-300 hover:scale-[1.02] active:scale-95">
                                <i class="fa-solid fa-save mr-3 opacity-50"></i> Değişiklikleri Kaydet
                            </button>
                            <a href="/admin/pets"
                                class="block text-center mt-6 text-sm font-black text-gray-400 hover:text-gray-900 transition">Vazgeç
                                ve Listeye Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <%- include("../partials/footer") %>