<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <div class="container mx-auto px-4 py-8">
            <div class="max-w-2xl mx-auto bg-white rounded-3xl shadow-lg overflow-hidden">
                <div class="bg-gradient-to-r from-blue-400 to-blue-500 p-6 text-center">
                    <h1 class="text-2xl font-bold text-white">Gördüm / Buldum Bildirimi</h1>
                    <p class="text-blue-100 text-sm mt-1">
                        <%= lost.name %> için bilgi veriyorsunuz
                    </p>
                </div>

                <form action="/lost/found/<%= lost.id %>" method="POST" class="p-8 flex flex-col gap-6">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                
                    <div>
                        <h3 class="text-gray-800 font-semibold border-b pb-2 mb-4">İletişim Bilgileriniz</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm text-gray-600 mb-1">Ad Soyad</label>
                                <input type="text" name="finder_name" required
                                    class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:border-blue-500 focus:outline-none"
                                    value="<%= user.name %>">
                            </div>
                            <div>
                                <label class="block text-sm text-gray-600 mb-1">İletişim (Tel/Email)</label>
                                <input type="text" name="finder_contact" required
                                    class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:border-blue-500 focus:outline-none"
                                    value="<%= user.email %>">
                            </div>
                        </div>
                    </div>

                   
                    <div>
                        <h3 class="text-gray-800 font-semibold border-b pb-2 mb-4">Görülme Detayları</h3>

                        <div class="mb-4">
                            <label class="block text-sm text-gray-600 mb-1">Nerede Gördünüz? (Konum)</label>
                            <input type="text" name="location_found" required
                                placeholder="Örn: Kadıköy Moda Sahili, çay bahçesi yanı..."
                                class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:border-blue-500 focus:outline-none">
                        </div>

                        <div class="mb-4">
                            <label class="block text-sm text-gray-600 mb-1">Ne Zaman Gördünüz?</label>
                            <input type="datetime-local" name="time_found" required
                                class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:border-blue-500 focus:outline-none">
                        </div>

                        <div>
                            <label class="block text-sm text-gray-600 mb-1">Ek Açıklama / Mesaj</label>
                            <textarea name="message" rows="4"
                                class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:border-blue-500 focus:outline-none"
                                placeholder="Durumu nasıldı? Yanında kimse var mıydı? vb."></textarea>
                        </div>
                    </div>

                    <button type="submit"
                        class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 rounded-xl transition shadow-lg hover:shadow-xl hover:-translate-y-1">
                        Bildirimi Gönder
                    </button>
                </form>
            </div>
        </div>

        <%- include('../partials/footer') %>