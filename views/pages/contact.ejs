<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <div class="container mx-auto px-4 py-12">
            <div class="max-w-4xl mx-auto">
                <div class="text-center mb-12">
                    <h1 class="text-3xl font-bold text-gray-800 mb-4">Bize Ulaşın</h1>
                    <p class="text-gray-600">Sorularınız, görüşleriniz veya önerileriniz için bizimle iletişime
                        geçebilirsiniz.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-12 bg-white rounded-3xl shadow-lg overflow-hidden">
                    
                    <div class="p-8 md:p-12">
                        <form action="/contact" method="POST" class="space-y-6">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">Adınız Soyadınız</label>
                                <input type="text" name="name" required
                                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-pink-500 focus:outline-none transition bg-gray-50 focus:bg-white"
                                    placeholder="Adınız...">
                            </div>

                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">E-posta Adresiniz</label>
                                <input type="email" name="email" required
                                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-pink-500 focus:outline-none transition bg-gray-50 focus:bg-white"
                                    placeholder="ornek@email.com">
                            </div>

                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">Mesajınız</label>
                                <textarea name="message" rows="4" required
                                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-pink-500 focus:outline-none transition bg-gray-50 focus:bg-white"
                                    placeholder="Bize ne söylemek istersiniz?"></textarea>
                            </div>

                            <button type="submit"
                                class="w-full bg-pink-500 hover:bg-pink-600 text-white font-bold py-3 rounded-xl transition shadow-lg hover:shadow-xl hover:-translate-y-1">
                                Gönder
                            </button>
                        </form>
                    </div>

                    
                    <div class="bg-gray-50 p-8 md:p-12 flex flex-col justify-center relative overflow-hidden">
                        <div class="relative z-10 space-y-8">
                            <div>
                                <h3 class="text-lg font-bold text-gray-800 mb-2 flex items-center gap-2">
                                    <i class="fa-solid fa-envelope text-pink-500"></i> E-posta
                                </h3>
                                <p class="text-gray-600">destek@petcareplus.com</p>
                                <p class="text-gray-600">info@petcareplus.com</p>
                            </div>

                            <div>
                                <h3 class="text-lg font-bold text-gray-800 mb-2 flex items-center gap-2">
                                    <i class="fa-solid fa-location-dot text-pink-500"></i> Adres
                                </h3>
                                <p class="text-gray-600">PetCare Plus Merkezi</p>
                                <p class="text-gray-600">Kadıköy, İstanbul</p>
                            </div>

                            <div>
                                <h3 class="text-lg font-bold text-gray-800 mb-2 flex items-center gap-2">
                                    <i class="fa-brands fa-instagram text-pink-500"></i> Sosyal Medya
                                </h3>
                                <p class="text-gray-600">@petcareplus</p>
                            </div>
                        </div>

                        
                        <div
                            class="absolute top-0 right-0 -mt-10 -mr-10 w-64 h-64 bg-pink-100 rounded-full blur-3xl opacity-50">
                        </div>
                        <div
                            class="absolute bottom-0 left-0 -mb-10 -ml-10 w-64 h-64 bg-blue-100 rounded-full blur-3xl opacity-50">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../partials/footer') %>