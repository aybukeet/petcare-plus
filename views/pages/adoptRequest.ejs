<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <div class="container mx-auto px-4 py-8">
            <div class="max-w-2xl mx-auto bg-white rounded-3xl shadow-lg overflow-hidden">
                <div class="bg-gradient-to-r from-pink-400 to-pink-500 p-6 text-center">
                    <h1 class="text-2xl font-bold text-white">Sahiplenme Başvuru Formu</h1>
                    <p class="text-pink-100 text-sm mt-1">
                        <%= pet.name %> için başvuru yapıyorsunuz
                    </p>
                </div>

                <form action="/adopt/request/<%= pet.id %>" method="POST" class="p-8 flex flex-col gap-6">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                    <!-- Kişisel Bilgiler -->
                    <div>
                        <h3 class="text-gray-800 font-semibold border-b pb-2 mb-4">Kişisel Bilgiler</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm text-gray-600 mb-1">Ad Soyad</label>
                                <input type="text" name="name" required
                                    class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:border-pink-500 focus:outline-none"
                                    value="<%= user.name %>">
                            </div>
                            <div>
                                <label class="block text-sm text-gray-600 mb-1">Email</label>
                                <input type="email" name="email" required
                                    class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:border-pink-500 focus:outline-none"
                                    value="<%= user.email %>">
                            </div>
                            <div class="md:col-span-2">
                                <label class="block text-sm text-gray-600 mb-1">Telefon</label>
                                <input type="tel" name="phone" required placeholder="0555 555 55 55"
                                    class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:border-pink-500 focus:outline-none">
                            </div>
                        </div>
                    </div>

                    <!-- Sahiplenme Detayları -->
                    <div>
                        <h3 class="text-gray-800 font-semibold border-b pb-2 mb-4">Sahiplenme Detayları</h3>

                        <div class="mb-4">
                            <label class="block text-sm text-gray-600 mb-1">Daha önce evcil hayvan baktınız mı / Evde
                                başka hayvan var mı?</label>
                            <select name="has_other_pets"
                                class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:border-pink-500 focus:outline-none">
                                <option value="no">Hayır, yok</option>
                                <option value="yes">Evet, var / Baktım</option>
                            </select>
                        </div>

                        <div>
                            <label class="block text-sm text-gray-600 mb-1">Neden <%= pet.name %>'i sahiplenmek
                                    istiyorsunuz?</label>
                            <textarea name="reason" rows="4" required
                                class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:border-pink-500 focus:outline-none"
                                placeholder="Lütfen kendinizi ve sahiplenme amacınızı kısaca anlatın..."></textarea>
                        </div>
                    </div>

                    <button type="submit"
                        class="bg-pink-500 hover:bg-pink-600 text-white font-bold py-3 rounded-xl transition shadow-lg hover:shadow-xl hover:-translate-y-1">
                        Başvuruyu Gönder
                    </button>
                </form>
            </div>
        </div>

        <%- include('../partials/footer') %>