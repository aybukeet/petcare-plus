<%- include("../partials/head") %>
<%- include("../partials/navbar") %>

<div class="max-w-4xl mx-auto px-6 py-12">

    <div class="bg-white rounded-3xl shadow-lg overflow-hidden">

        
        <div class="w-full h-[350px] overflow-hidden">
            <img src="/images/pets/<%= lost.image %>" 
                 class="w-full h-full object-cover" />
        </div>

        
        <div class="p-8">
            <h1 class="text-4xl font-bold text-gray-800 mb-4">
                <%= lost.name %>
            </h1>

            <p class="text-gray-600 text-lg mb-2">
                <i class="fa-regular fa-calendar"></i> Kayıp Tarihi: <%= lost.date %>
            </p>

            <p class="text-gray-600 text-lg mb-2">
                <i class="fa-solid fa-location-dot"></i> Şehir: <%= lost.city %>
            </p>

            <p class="text-gray-700 mt-4 leading-relaxed">
                <%= lost.description || "Bu kayıp bildirim için açıklama eklenmemiş." %>
            </p>

            <div class="mt-8">
                <a href="/lost" 
                   class="px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white rounded-xl shadow">
                    ← Kayıp İlanlarına Dön
                </a>
            </div>
        </div>
    </div>

</div>

<%- include("../partials/footer") %>
