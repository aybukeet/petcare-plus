<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <div class="container mx-auto px-4 py-8 min-h-[60vh]">
            <div class="max-w-3xl mx-auto">
                <div class="flex justify-between items-center mb-6">
                    <h1 class="text-2xl font-bold text-gray-800">Bildirimlerim</h1>
                    <a href="/user/notifications/read-all"
                        class="text-sm text-pink-500 hover:text-pink-600 font-semibold">
                        Tümünü Okundu İşaretle
                    </a>
                </div>

                <div class="space-y-4">
                    <% notifications.forEach(notif=> { %>
                        <div
                            class="bg-white p-5 rounded-2xl shadow-sm border border-gray-100 flex gap-4 transition hover:shadow-md <%= notif.is_read ? 'opacity-60' : '' %>">
                            <div class="shrink-0 pt-1">
                                <% if (notif.type==='success' ) { %>
                                    <div
                                        class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center text-green-500">
                                        <i class="fa-solid fa-check"></i>
                                    </div>
                                    <% } else if (notif.type==='error' ) { %>
                                        <div
                                            class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center text-red-500">
                                            <i class="fa-solid fa-xmark"></i>
                                        </div>
                                        <% } else { %>
                                            <div
                                                class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-500">
                                                <i class="fa-solid fa-info"></i>
                                            </div>
                                            <% } %>
                            </div>

                            <div class="flex-1">
                                <p class="text-gray-800 mb-1">
                                    <%= notif.message %>
                                </p>
                                <span class="text-xs text-gray-400">
                                    <%= new Date(notif.created_at).toLocaleString('tr-TR') %>
                                </span>
                            </div>

                            <% if (!notif.is_read) { %>
                                <div class="shrink-0 flex items-center">
                                    <a href="/user/notifications/read/<%= notif.id %>"
                                        class="w-2 h-2 rounded-full bg-pink-500" title="Okundu işaretle"></a>
                                </div>
                                <% } %>
                        </div>
                        <% }) %>

                            <% if (notifications.length===0) { %>
                                <div class="text-center py-12 text-gray-400">
                                    <i class="fa-regular fa-bell text-4xl mb-4 opacity-50"></i>
                                    <p>Henüz bir bildiriminiz yok.</p>
                                </div>
                                <% } %>
                </div>
            </div>
        </div>

        <%- include('../partials/footer') %>