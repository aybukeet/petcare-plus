<%- include("../partials/head") %>
    <%- include("../partials/navbar") %>

        <div class="min-h-screen bg-[#fafafa] relative overflow-hidden">
            <!-- BACKGROUND GLOWS -->
            <div class="absolute inset-0 z-0 pointer-events-none">
                <div
                    class="absolute top-[-20%] left-[-10%] w-[60%] h-[80%] bg-orange-50 rounded-full blur-[150px] opacity-40">
                </div>
                <div
                    class="absolute bottom-[-20%] right-[-10%] w-[60%] h-[80%] bg-red-50 rounded-full blur-[150px] opacity-40">
                </div>
            </div>

            <div class="max-w-7xl mx-auto pt-32 pb-40 px-6 relative z-10">
                <!-- HEADER -->
                <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-6">
                    <div>
                        <span
                            class="inline-block px-4 py-1.5 bg-orange-50 text-orange-600 text-[10px] font-black uppercase tracking-[0.3em] rounded-full mb-4">
                            Takip Paneli
                        </span>
                        <h1 class="text-4xl md:text-6xl font-black text-gray-900 tracking-tighter leading-none">
                            Kayıp <span
                                class="text-transparent bg-clip-text bg-gradient-to-r from-orange-600 to-red-600">İlanlarım</span>
                        </h1>
                    </div>

                    <a href="/lost/create"
                        class="px-8 py-4 bg-gray-900 text-white rounded-2xl font-black shadow-xl hover:bg-orange-600 transition-all duration-300 hover:scale-105 active:scale-95 flex items-center gap-3">
                        <i class="fa-solid fa-plus"></i> Yeni İlan Ver
                    </a>
                </div>

                <% if (!lostPets || lostPets.length===0) { %>
                    <div class="glass-card rounded-[3.5rem] p-24 text-center border-4 border-dashed border-white/50">
                        <div
                            class="w-32 h-32 bg-orange-50 rounded-full flex items-center justify-center text-orange-200 text-6xl mx-auto mb-8">
                            <i class="fa-solid fa-heart-crack animate-pulse" style="animation-duration: 3s;"></i>
                        </div>
                        <h2 class="text-3xl font-black text-gray-800 mb-4">Henüz bir ilanınız yok</h2>
                        <p class="text-gray-400 text-lg max-w-sm mx-auto mb-10 font-medium">
                            Kaybolan dostunuzu bulmak için topluluğumuzdan yardım isteyebilirsiniz.
                        </p>
                        <a href="/lost/create"
                            class="text-orange-600 font-black border-b-2 border-orange-200 hover:border-orange-500 transition-all">Hemen
                            İlan Oluştur</a>
                    </div>
                    <% } else { %>

                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
                            <% lostPets.forEach(lost=> { %>
                                <div
                                    class="glass-card rounded-[3rem] p-8 shadow-xl hover-lift border border-white group">
                                    <div class="flex items-start justify-between mb-8">
                                        <div
                                            class="w-16 h-16 bg-gradient-to-br from-orange-400 to-red-500 rounded-[1.5rem] flex items-center justify-center text-white text-2xl shadow-lg shadow-orange-100 group-hover:rotate-6 transition-transform">
                                            <i class="fa-solid fa-paw"></i>
                                        </div>
                                        <span
                                            class="px-4 py-1.5 bg-green-50 text-green-600 rounded-full text-[10px] font-black uppercase tracking-widest border border-green-100 flex items-center gap-2">
                                            <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                                            Aktif İlan
                                        </span>
                                    </div>

                                    <h3 class="text-2xl font-black text-gray-800 mb-2 tracking-tight">
                                        <%= lost.name %>
                                    </h3>
                                    <p class="text-gray-400 font-bold text-sm mb-10 flex items-center gap-2">
                                        <i class="fa-solid fa-location-dot"></i>
                                        <%= lost.city %>
                                    </p>

                                    <div class="flex gap-3 pt-6 border-t border-gray-50">
                                        <a href="/lost/edit/<%= lost.id %>"
                                            class="flex-1 py-3 bg-gray-50 rounded-2xl font-black text-xs text-center text-gray-500 hover:bg-gray-900 hover:text-white transition-all">
                                            <i class="fa-solid fa-pen-to-square mr-2"></i> Düzenle
                                        </a>
                                        <form action="/lost/delete/<%= lost.id %>" method="POST" class="flex-1">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <button
                                                class="w-full py-3 bg-red-50 text-red-600 rounded-2xl font-black text-xs hover:bg-red-600 hover:text-white transition-all">
                                                <i class="fa-solid fa-trash mr-2"></i> Sil
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                <% }) %>
                        </div>

                        <% } %>
            </div>
        </div>

        <%- include("../partials/footer") %>