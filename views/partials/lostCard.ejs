<div class="bg-white rounded-3xl shadow-lg overflow-hidden hover-lift group">

   
    <div class="w-full aspect-[4/3] overflow-hidden relative">
        <img src="/images/pets/<%= img %>"
            class="w-full h-full object-cover object-center group-hover:scale-105 transition duration-500" />

        <div
            class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition duration-300">
        </div>

        <span
            class="absolute top-3 right-3 glass-card text-gray-800 text-xs font-bold px-3 py-1 rounded-full shadow-sm">
            KAYIP
        </span>
    </div>

   
    <div class="p-5 flex flex-col gap-2">

        <h2 class="text-xl font-semibold text-gray-800 group-hover:text-blue-600 transition">
            <%= name %>
        </h2>

        <div class="space-y-1">
            <p class="text-gray-600 text-sm flex items-center gap-2">
                <i class="fa-solid fa-location-dot text-blue-400"></i>
                <%= city %>
            </p>
            <p class="text-gray-600 text-sm flex items-center gap-2">
                <i class="fa-solid fa-calendar text-blue-400"></i>
                <%= date %> tarihinde kayboldu
            </p>
        </div>

        <div class="mt-4 flex flex-col gap-2">
            <a href="/lost/<%= slug %>"
                class="block text-center bg-gradient-to-r from-blue-400 to-blue-500 text-white py-2.5 rounded-full shadow-md hover:shadow-lg transition-all active:scale-95">
                Detaylar
            </a>

            <% if (locals.user) { %>
                <a href="/lost/found/<%= id %>"
                    class="text-center text-green-600 text-sm font-semibold py-2 border border-green-200 rounded-full hover:bg-green-50 transition">
                    Gördüm / Buldum
                </a>
                <% } else { %>
                    <a href="/auth/login" class="text-center text-gray-500 text-xs py-2">
                        Bilgi vermek için giriş yapın
                    </a>
                    <% } %>
        </div>

    </div>
</div>