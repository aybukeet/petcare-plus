<div class="bg-white rounded-3xl shadow-lg overflow-hidden hover-lift group">

    <!-- IMAGE -->
    <div class="w-full aspect-[4/3] overflow-hidden relative">
        <img src="/images/pets/<%= img %>"
            class="w-full h-full object-cover object-center group-hover:scale-105 transition duration-500" />

        <div
            class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition duration-300">
        </div>

        <span
            class="absolute top-3 right-3 glass-card text-gray-800 text-xs font-bold px-3 py-1 rounded-full shadow-sm">
            <%= type.toUpperCase() %>
        </span>
    </div>

    <!-- CONTENT -->
    <div class="p-5 flex flex-col gap-2">

        <h2 class="text-xl font-semibold text-gray-800 group-hover:text-pink-600 transition">
            <%= name %>
        </h2>

        <p class="text-gray-600 text-sm">
            <i class="fa-regular fa-calendar text-pink-400"></i>
            <%= age %> · <%= city %>
        </p>

        <div class="mt-4 flex flex-col gap-2">
            <a href="/adopt/<%= slug %>"
                class="block text-center bg-gradient-to-r from-pink-400 to-pink-500 text-white py-2.5 rounded-full shadow-md hover:shadow-lg transition-all active:scale-95">
                Detaylar
            </a>

            <% if (locals.user) { %>
                <a href="/adopt/request/<%= id %>"
                    class="block w-full text-center text-pink-500 text-sm font-semibold py-2 border border-pink-200 rounded-full hover:bg-pink-50 transition">
                    Sahiplenmek İstiyorum
                </a>
                <% } else { %>
                    <a href="/auth/login" class="text-center text-gray-500 text-xs py-2">
                        Sahiplenmek için giriş yapın
                    </a>
                    <% } %>
        </div>

    </div>
</div>