<%- include("../partials/head") %>
    <%- include("../partials/navbar") %>

        <div class="min-h-screen flex items-center justify-center bg-gray-50 px-4">

            <div class="w-full max-w-md bg-white rounded-3xl shadow-xl p-8">

                <h2 class="text-2xl font-bold text-center text-pink-600 mb-6">
                    Şifre Sıfırlama
                </h2>

                <% if (message) { %>
                    <div class="mb-4 p-3 rounded-xl bg-pink-100 text-pink-700 text-center">
                        <%= message %>
                    </div>
                    <% } %>

                        <form action="/auth/forgot-password" method="POST" class="space-y-4">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                            <input type="email" name="email" placeholder="E-posta adresiniz" required
                                class="w-full border rounded-xl p-3">

                            <button class="w-full bg-pink-500 hover:bg-pink-600 text-white py-3 rounded-xl">
                                Şifre Sıfırlama Linki Gönder
                            </button>

                        </form>

                        <p class="text-center mt-6">
                            <a href="/auth/login" class="text-pink-500 hover:underline">
                                ← Giriş sayfasına dön
                            </a>
                        </p>

            </div>

        </div>

        <%- include("../partials/footer") %>